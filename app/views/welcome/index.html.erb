<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-9">
    	<%= form_tag '/users/search', method: "post", class: "form-search" do %>
				<%= text_field_tag "query", '', placeholder: "Search by Name, School, Highschool", class: "search-query input-xxlarge", style:"height:32px; width:500px" %>
				<%= submit_tag "submit", class: "btn btn-success"  %>
    	<% end %>
    </div>
</div>
<br/><br/>
<% if @query_text.present? %>
	<h2> You searched for: <%= @query_text %> </h2>
<% end %>

<div id="trending_users" class="row show-grid">
	<% @trending_users.each do |user| %>
		<%= link_to user_path(user) do %>
			<div class="col-md-4">
				<div class="photo"><%= image_tag "no_people.jpg", size: "325x325" %></div>
				<div class="name"><%= user.name %></div>
				<div class="school"><%= user.school %></div>
				<div class="highschool"><%= user.highschool %></div>
				<div class="city"><%= user.city %></div>
			</div>
		<% end %>
	<% end %>
</div>